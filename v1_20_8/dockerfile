# 1. Base Image
FROM continuumio/miniconda3:latest

RUN conda install -y python=3.12 \
    && conda clean -afy

# 2. System Settings
WORKDIR /app

RUN apt-get update && apt-get install -y \
    git \
    build-essential \
    unzip \
    && rm -rf /var/lib/apt/lists/*

# 3. Dependencies Installation
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# 4. Archive Injection & Installation
COPY MultiOptPy-1.20.8.zip .
RUN unzip MultiOptPy-1.20.8.zip && \
    cd MultiOptPy-* && \
    pip install --no-deps . && \
    cd ..

# 4.5 Create Non-Root User & Setup Conda Auto-activate
RUN useradd -m -s /bin/bash user01
RUN echo "source /opt/conda/etc/profile.d/conda.sh" >> /home/user01/.bashrc && \
    echo "conda activate base" >> /home/user01/.bashrc

USER user01
ENV HOME=/home/user01
WORKDIR /home/user01

COPY --chown=user01:user01 MultiOptPy-1.20.8.zip .

# 5. Finalize
CMD ["/bin/bash", "--login"]